{
    "manifest_version": 3,
    "name": "LLM Guardian",
    "version": "1.0.2",
    "version_name": "prod",
    "description": "Redacts secrets in ChatGPT prompts.",
    "action": {
      "default_icon": {
        "48": "logo-white.png"
      }
    },
    "icons": {
      "48": "logo-white.png"
    },
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://api.llmsecrets.com/*",
      "https://chatgpt.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://chatgpt.com/*"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["logo-white.png", "logo-black.png"],
        "matches": ["https://chatgpt.com/*"]
      }
    ],
    "options_page": "options.html",
    "background": {
      "service_worker": "background.js"
    }
  }